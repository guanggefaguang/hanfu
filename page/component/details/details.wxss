@import '../../common/common.wxss';

.goods-box {
  position: relative;
  color: #454552;
  border-bottom: 10rpx solid #ededed;
}

.goods-box .goods-thumb {
  width: 100%;
  height: 420rpx;
}

.Imge {
  width: 100%;
  height: 420rpx;
}

.goods-stock {
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-top: 20rpx;
}

.goods-title {
  font-size: 30rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  text-align: left;
  margin-top: 20rpx;
  padding: 0rpx 20rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  box-sizing: border-box;
}

.goods-price {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  text-align: right;
  padding: 0rpx 30rpx;
  font-weight: bold;
}

.Have {
  color: #999;
  padding-right: 20rpx;
}

.None {
  color: #ccc;
  padding-right: 20rpx;
}

.Look {
  color: red;
}

.Home_title {
  margin: 20rpx 0rpx;
  text-align: center;
  color: #ab956d;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  position: relative;
}

.Home_title text {
  background: #fff;
  padding: 0rpx 10rpx;
}

.xie {
  position: absolute;
  z-index: -1;
  width: 400rpx;
  height: 1rpx;
  top: 50%;
  left: 180rpx;
  background: #ab956d;
}

.BottomTab {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-content: center;
  align-items: center;
  overflow: hidden;
  height: 100rpx;
  background-color: white;
  position: fixed;
  bottom: 0;
  left: 0;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.BottomTab::after {
  content: "";
  position: absolute;
  top: 0rpx;
  left: 0rpx;
  width: 100%;
  height: 1rpx;
  transform: scaleY(0.5);
  background: #ccc;
}

.homeI {
  width: 55rpx;
  height: 50rpx;
  display: block;
  margin: 0rpx 90rpx 90rpx 90rpx auto;
}

.Buy {
  width: 270rpx;
  height: 100rpx;
  background: #f55636;
  color: #fff;
  border-radius: 0;
  font-size: 34rpx;
  line-height: 100rpx;
  position: absolute;
  right: 0;
}

.Buy::after {
  border: none;
}

.Bottom {
  padding-bottom: 130rpx;
}

.Tile {
  padding: 30rpx 30rpx;
  color: #666;
  font-size: 30rpx;
}

.Dtal {
  display: block;
  width: 100%;
  height: 620rpx;
  /* margin: 0rpx auto; */
}

.Zi {
  display: block;
  width: 80%;
  margin: 0 auto;
  padding: 20rpx;
  border: 1rpx solid #ccc;
}

.service {
  width: 100rpx;
  height: 100rpx;
  background: none;
  border: none;
}

.bottomBi {
  display: flex;
  justify-content: flex-start;
  align-content: center;
  align-items: center;
  height: 100%;
}

.serviceImg {
  width: 60rpx;
  height: 60rpx;
  display: block;
  margin: 23rpx 0 auto;
}

button::after {
  border: none;
}
