/* page/component/shop/shop.wxss */

.shopItem {
  width: 350rpx;
  height: 450rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  margin: 10rpx 0rpx;
  background: #fff;
  border-radius: 10rpx;
}

.ShopImg {
  display: block;
  width: 100%;
  height: 240rpx;
  margin-bottom: 40rpx;
}

.Name {
  margin-bottom: 20rpx;
  width: 100%;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.Title {
  font-size: 30rpx;
}

.Number {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  height: 50rpx;
  font-size: 28rpx;
  margin-top: 30rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.Color {
  font-size: 40rpx;
  color: red;
  padding-right: 20rpx;
}
