/* page/component/choice/choice.wxss */

.big_box {
  width: 100%;
  height: 180rpx;
  position: relative;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  color: #666;
  align-items: center;
  padding: 0rpx 10rpx;
  box-sizing: border-box;
}

.big_box:after {
  content: '';
  position: absolute;
  left: 0;
  bottom: 0;
  background: #ccc;
  width: 100%;
  height: 1rpx;
  -webkit-transform: scaleY(0.5);
  transform: scaleY(0.5);
  -webkit-transform-origin: 0 0;
  transform-origin: 0 0;
}

.Info {
  padding: 0rpx 30rpx;
  font-size: 32rpx;
}

.address {
  padding: 0rpx 30rpx;
  font-size: 32rpx;
}

.add {
  width: 100%;
  text-align: center;
  padding: 30rpx;
  letter-spacing: 3rpx;
  font-size: 34rpx;
}

.init {
