/* banner */
.swiper-box {
  width: 100%;
  height: 400rpx;
  margin-top: 140rpx;
}

swiper-item {
  width: 100%;
  height: 400rpx;
}

.Img {
  width: 100%;
  height: 400rpx;
}

.shop {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  margin-bottom:100rpx; 
}

.Home_title {
  margin: 20rpx 0rpx;
  text-align: center;
  color: #05a67b;
  font-size: 36rpx;
  font-weight: bold;
  letter-spacing: 4rpx;
  position: relative;
}

.Home_title text {
  background: #f5f5f5;
  padding: 0rpx 10rpx;
}

.xie {
  position: absolute;
  z-index: -1;
  width: 400rpx;
  height: 1rpx;
  top: 50%;
  left: 180rpx;
  background: #05a67b;
}

.shopItem {
  width: 350rpx;
  height: 450rpx;
  box-sizing: border-box;
  position: relative;
  overflow: hidden;
  margin: 10rpx 0rpx;
  background: #fff;
  border-radius: 10rpx;
}

.ShopImg {
  display: block;
  width: 100%;
  height: 240rpx;
  margin-bottom: 40rpx;
    background: #efefef;

}

.Name {
  margin-bottom: 20rpx;
  width: 100%;
  height: 80rpx;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.Title {
  font-size: 30rpx;
}

.Number {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 50rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
  padding: 0rpx 20rpx;
  box-sizing: border-box;
}

.Color {
  font-size: 36rpx;
  color: red;
  padding-right: 10rpx 10rpx;
}
