@import '../../common/common.wxss';

page, .main {
  height: 100%;
}

.categroy-left {
  float: left;
  width: 150rpx;
  height: 100%;
  border-right: 1px solid #ddd;
  box-sizing: border-box;
}

.categroy-left .cate-list {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  border-left: 3px solid #fff;
  border-bottom: 1px solid #f2f2f2;
}

.categroy-left .cate-list.on {
  color: #05a67b;
  border-left: 5rpx solid #05a67b;
}

.categroy-right {
  float: right;
  width: 600rpx;
  height: 100%;
  overflow: hidden;
}

.cate-box {
  height: 100%;
  padding: 40rpx;
  box-sizing: border-box;
}

.cate-box .cate-banner image {
  display: block;
  width: 100%;
  height: 190rpx;
}

.cate-title {
  position: relative;
  height: 30rpx;
  line-height: 30rpx;
  padding: 30rpx 0 55rpx;
  text-align: center;
  color: #3c3c3c;
  font-size: 28rpx;
}

.cate-title::before {
  position: absolute;
  left: 130rpx;
  top: 43rpx;
  content: '';
  width: 70rpx;
  height: 4rpx;
  background: #3c3c3c;
}

.cate-title::after {
  position: absolute;
  right: 130rpx;
  top: 43rpx;
  content: '';
  width: 70rpx;
  height: 4rpx;
  background: #3c3c3c;
}

.product {
  width: 100%;
  display: flex;
  justify-content: flex-start;
  flex-wrap: wrap;
  margin: 10rpx;
}

.product-list {
  display: inline-block;
  width: 240rpx;
  height: 175rpx;
  background: #ccc;
  text-align: center;
  margin: 0 20rpx 20rpx 0;
  font-size: 24rpx;
  border-radius: 15rpx;
}

.product-list image {
  width: 240rpx;
  height: 175rpx;
  border-radius: 15rpx;
}

.product-list:nth-child(3n) {
  margin-right: 0;
}

.classname {
  height: 40rpx;
  line-height: 40rpx;
}
