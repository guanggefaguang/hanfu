@import '../../common/common.wxss';

.nickname {
  font-size: 32rpx;
}

.nike {
  width: 50%;
  display: flex;
  justify-content: space-around;
  align-content: center;
  align-items: center;
}

.userinfo-btn {
  width: 300rpx;
  height: 80rpx;
  font-size: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0;
}

.header {
  position: relative;
  height: 160rpx;
  line-height: 100rpx;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  color: #fff;
  background:#05a67b;
  display: flex;
  justify-content: space-between;
  align-content: center;
  align-items: center;
  border-bottom: 2rpx solid #ededed;
}

.header .thumb {
  position: absolute;
  left: 30rpx;
  top: 30rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.header .about {
  float: right;
  display: flex;
  align-content: center;
  justify-content: center;
  background: none;
  border: none;
  margin-top: 10rpx;
  padding: 0;
  font-size: 32rpx;
  color: #fff;
  margin: 0;
  align-items: center;
}

.about::after {
  border: none;
}

.address-box {
  /* border-bottom: 2rpx solid #ededed; */
  color: #999;
  line-height: 90rpx;
  font-size: 28rpx;
}

.address-box .address-manage {
  position: relative;
  height: 90rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: left;
  font-size: 30rpx;
}
 .dz{
  margin-left: 50rpx;
}
.address-box .address-manage::after {
  position: absolute;
  right: 30rpx;
  top: 34rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #7f7f7f;
  border-right: 4rpx solid #7f7f7f;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

.address-box .address-list {
  padding-left: 30rpx;
}

.address-box .address-list view {
  height: 100rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.address-box .address-list view:last-child {
  border-bottom: 0;
}

.orders-box {
  width: 100%;
  color: #999;
  font-size: 32rpx;
}

.orders {
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 1rpx solid #e9e9e9;
  text-align: left;
}

.orders-list {
  border-bottom: 20rpx solid #ededed;
}

.orders-list:last-child {
  border-bottom: 0;
}

.orders-number {
  /* height: 90rpx; *//* line-height: 90rpx; *//* border-bottom: 1rpx solid #e9e9e9; *//* padding-left: 20rpx; */
}

.orders-detail {
  position: relative;
  /* height: 120rpx; */
  margin-left: 30rpx;
  padding: 25rpx 20rpx 25rpx 200rpx;
  border-bottom: 1rpx solid #e9e9e9;
}

.orders-detail image {
  position: absolute;
  left: 20rpx;
  top: 80rpx;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.orders-detail view {
  line-height: 60rpx;
}

.orders-detail .orders-status {
  position: absolute;
  right: 20rpx;
  top: 35rpx;
  height: 120rpx;
  line-height: 120rpx;
  color: #b42f2d;
}

.orders-footer {
  height: 60rpx;
  line-height: 60rpx;
  color: #2f2f2f;
  padding: 15rpx 30rpx 15rpx 0;
}

.orders-footer .orders-btn {
  float: right;
  width: 170rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 6rpx;
  background: #b42f2d;
  color: #fff;
}

.Call {
  width: 70rpx;
  height: 70rpx;
  padding-right: 10rpx;
}

.commodity {
  color: #000;
}

.orders, .dz {
  color: #000;
}

.num {
  color: red;
}
