/*切换栏*/

.swiper-tab {
  height: 75rpx;
  line-height: 75rpx;
  background: #fff;
  color: #333;
  display: flex;
  position: relative;
  z-index: 2;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom: 15rpx solid #f2f2f2;
}

.swiper-tab-list {
  margin: 0 30rpx;
  padding: 0 4rpx;
  font-size: 30rpx;
}

.on {
  border-bottom: 2px solid #05a67b;
  color: #05a67b;
}

.navTopList {
  display: flex;
  width: 100%;
  height: 75rpx;
  background: #fff;
  border-bottom: 1rpx solid #bebebe;
  margin-top: 5rpx;
}

.navTopList .order-info {
  text-align: center;
}

.navTopList .order-info view {
  width: 56rpx;
  height: 56rpx;
  margin-left: 31rpx;
}

.navTopList .order-info text {
  font-size: 34rpx;
}

.navTopList .order-info text.active {
  color: #05a67b;
}

.navTopList .ywc, .navTopList .dfk, .navTopList .yqx {
  flex: 1;
}

/*订单列表*/

.orderDetails {
  background: #fff;
  width: 95%;
  height: 390rpx;
  margin: 0 auto;
  border-radius: 30rpx;
  margin-bottom: 20rpx;
}

.orderListTitle {
  width: 95%;
  margin: 0 auto;
  border-bottom: 1rpx solid #f2f2f2;
  height: 100rpx;
  line-height: 100rpx;
}

.orderListTitle .userName {
  margin-right: 50rpx;
  margin-left: 10rpx;
}

.orderListTitle .orderStatus {
  float: right;
  margin-right: 20rpx;
  color: #05a67b;
  font-size: 34rpx;
}

.orderListDetails {
  display: flex;
  height: 200rpx;
  width: 95%;
  margin: 0 auto;
  border-bottom: 1rpx solid #f2f2f2;
}

.orderListDetails .productImg {
  flex: 1;
  width: 170rpx;
  height: 140rpx;
  margin-top: 40rpx;
  margin-left: 20rpx;
  border-radius: 15rpx;
  background: rgb(228, 164, 164);
}

.orderListDetails .productImg image {
  border-radius: 15rpx;
  width: 170rpx;
  height: 140rpx;
}

.orderListDetails .productInfo {
  flex: 4;
  margin: 40rpx 10rpx 20rpx 30rpx;
  font-size: 30rpx;
}

.orderListDetails .productInfo .productTitle {
  font-size: 27rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  margin-bottom: 10rpx;
}



.productCount {
  height: 80rpx;
  width: 95%;
  margin: 0 auto;
  line-height: 80rpx;
}

.productCount {
  overflow: hidden;
