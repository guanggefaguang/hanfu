/* pages/detail/detail.wxss */

.swiper-tab {
  width: 60%;
  text-align: center;
  height: 70rpx;
  line-height: 70rpx;
  display: flex;
  flex-flow: row;
  justify-content: space-between;
}

.swiper-tab-item {
  width: 260rpx;
  height: 50rpx;
  margin: 15rpx;
  color: #434343;
  line-height: 50rpx;
  border: 1rpx solid #434343;
  border-radius: 10rpx;
  font-size: 25rpx;
}

.active {
  color: #fff;
  border: 1rpx solid #f65959;
  background: #f65959;
}

swiper {
  text-align: center;
}
