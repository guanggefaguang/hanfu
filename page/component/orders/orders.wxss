@import '../../common/common.wxss';

.maibig_marginn {
  padding-bottom: 105rpx;
}

.orders-address {
  position: relative;
  padding: 20rpx 50rpx 20rpx 35rpx;
  font-size: 14px;
  line-height: 25px;
  border-bottom: 1rpx solid #ededed;
  color: #666666;
  box-sizing: border-box;
}

.orders-address-name {
  display: inline-block;
  width: 300rpx;
}

.orders-no-address {
  position: relative;
  height: 90rpx;
  line-height: 90rpx;
  color: #666666;
  border-bottom: 20rpx solid #ededed;
  text-align: center;
}

.orders-no-address::after {
  position: absolute;
  right: 30rpx;
  top: 34rpx;
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-top: 4rpx solid #666666;
  border-right: 4rpx solid #666666;
  -webkit-transform: rotate(45deg);
  transform: rotate(45deg);
}

.orders-list {
  position: relative;
  padding: 20rpx 20rpx 20rpx 220rpx;
  height: 180rpx;
  border-bottom: 1rpx solid #ededed;
}

.orders-thumb {
  position: absolute;
  top: 20rpx;
  left: 20rpx;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}

.orders-list view {
  line-height: 60rpx;
}

.orders-footer {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 95rpx;
  line-height: 95rpx;
  border-top: 1rpx solid #ededed;
}

.orders-footer .orders-footer-total {
  display: inline-block;
  width: 510rpx;
  padding-left: 30rpx;
  box-sizing: border-box;
  color: #666666;
}

.orders-footer .orders-footer-btn {
  display: inline-block;
  text-align: center;
  width: 270rpx;
  height: 100rpx;
  background: #f55636;
  color: #fff;
  border-radius: 0;
  font-size: 34rpx;
  line-height: 100rpx;
  position: absolute;
  right: 0;
}

.orders-pro-price {
  color: red;
  font-size: 35rpx;
}

.orders-count-num {
  color: #666;
}
